{
  "$schema":"http://json-schema.org/draft-04/schema#",
  "id":"http://ctrlaltbksp.eu/questionnaire/schema-01.json#",
  "definitions":{
    "positiveInteger":{
      "type":"integer",
      "minimum":0
    },
    "positiveNumber":{
      "type":"number",
      "minimum":0
    },
    "notEmptyString":{
      "type":"string",
      "minLength":1
    },
    "question":{
      "type":"object",
      "allOf":[
        {
          "required":[
            "text"
          ],
          "properties":{
            "text":{
              "$ref":"#/definitions/notEmptyString"
            },
            "coefficient":{
              "$ref":"#/definitions/positiveNumber"
            },
            "explainations":{
              "$ref":"#/definitions/notEmptyString"
            }
          }
        },
        {
          "oneOf":[
            {
              "required":[
                "type",
                "options",
                "solution"
              ],
              "properties":{
                "type":{
                  "enum":[
                    "choices"
                  ]
                },
                "options":{
                  "type":"array",
                  "items":{
                    "$ref":"#/definitions/notEmptyString"
                  },
                  "minItems":1
                },
                "solution":{
                  "oneOf":[
                    {
                      "$ref":"#/definitions/positiveInteger"
                    },
                    {
                      "type":"array",
                      "items":{
                        "$ref":"#/definitions/positiveInteger"
                      },
                      "minItems":1
                    }
                  ]
                }
              }
            },
            {
              "required":[
                "type"
              ],
              "properties":{
                "type":{
                  "enum":[
                    "completable-text"
                  ]
                }
              }
            }
          ]
        }
      ],
      "additionalProperties":true,
      "required":[
        "text"
      ]
    }
  },
  "type":"object",
  "properties":{
    "metadata":{
      "type":"object",
      "properties":{
        "title":{
          "$ref":"#/definitions/notEmptyString"
        },
        "instructions":{
          "$ref":"#/definitions/notEmptyString"
        },
        "explainations":{
          "$ref":"#/definitions/notEmptyString"
        },
        "gradingScale":{
          "oneOf":[
            {
              "$ref":"#/definitions/positiveNumber"
            },
            {
              "enum":[
                "%"
              ]
            }
          ]
        }
      }
    },
    "questions":{
      "type":"array",
      "items":{
        "$ref":"#/definitions/question"
      }
    }
  },
  "required":[
    "questions"
  ]
}